<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".LeaderboardActivity">

	<TextView
		android:id="@+id/textViewLeaderboardText"
		android:layout_width="411dp"
		android:layout_height="72dp"
		android:layout_marginTop="8dp"
		android:gravity="center"
		android:text="@string/leaderboard"
		android:textSize="36sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ScrollView
		android:id="@+id/scrollViewLeaderboard"
		android:layout_width="411dp"
		android:layout_height="400dp"
		android:layout_marginTop="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textViewLeaderboardText" >

		<TextView
			android:id="@+id/textViewLeaderboard"
			android:layout_width="410dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:textSize="24sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />
	</ScrollView>

	<Button
		android:id="@+id/buttonLeaderboardBack"
		android:layout_width="150dp"
		android:layout_height="54dp"
		android:layout_marginBottom="8dp"
		android:gravity="center"
		android:text="@string/back"
		android:textSize="18sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>